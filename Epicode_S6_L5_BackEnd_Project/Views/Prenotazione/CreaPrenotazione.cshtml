            @Html.EditorFor(model => model.TariffaApplicata, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TariffaApplicata, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.MezzaPensione, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            <div class="checkbox">
                @Html.EditorFor(model => model.MezzaPensione)
                @Html.ValidationMessageFor(model => model.MezzaPensione, "", new { @class = "text-danger" })
