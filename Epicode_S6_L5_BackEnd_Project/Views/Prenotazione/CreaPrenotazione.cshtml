@model Epicode_S6_L5_BackEnd_Project.Models.Prenotazione

@{
    ViewBag.Title = "CreaPrenotazione";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center">Crea Prenotazione</h2>
    <div class="text-center mt-3 mb-3">
        <a href="@Url.Action("ListaPrenotazione", "Prenotazione")" class="btn btn-primary">Lista delle Prenotazioni</a>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.CodiceFiscale)

    <div>
        @Html.LabelFor(model => model.NumeroCamera, htmlAttributes: new { @class = "control-label col-md-2" })
